@page "/login"

<PageTitle>SuperDuperMart - Login</PageTitle>

<div class="row">
    <div class="col-sm-6 col-lg-5 col-xl-4">
        <div class="card shadow border-0">
            <div class="card-body">
                <EditForm Model="@Model" OnValidSubmit="Submit">
                    <div class="mb-3">
                        <label class="form-label" for="@Model.Email">Email</label>
                        <InputText type="email" class="form-control" for="@Model.Email" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="@Model.Password">Password</label>
                        <InputText type="password" class="form-control" for="@Model.Password" />
                    </div>
                    <div class="mb-3 form-check">
                        <InputCheckbox type="checkbox" class="form-check-input" for="@Model.IsAdministrator" />
                        <label class="form-check-label" for="@Model.IsAdministrator">Administrator</label>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </EditForm>
            </div>
        </div>
    </div>
</div>