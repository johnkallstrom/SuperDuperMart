<nav>
    <ul class="pagination">
        @if (PageNumber <= _firstPage)
        {
            <li class="page-item disabled">
                <a class="page-link" @onclick=Previous>
                    <i class="bi bi-caret-left"></i>
                </a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link" @onclick=Previous>
                    <i class="bi bi-caret-left"></i>
                </a>
            </li>
        }
        @if (PageNumber >= Pages)
        {
            <li class="page-item disabled">
                <a class="page-link" @onclick=Next>
                    <i class="bi bi-caret-right"></i>
                </a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link" @onclick=Next>
                    <i class="bi bi-caret-right"></i>
                </a>
            </li>
        }
    </ul>
</nav>