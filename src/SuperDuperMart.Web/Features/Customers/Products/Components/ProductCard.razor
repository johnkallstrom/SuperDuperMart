@using System.Globalization

<div class="card shadow border-0 mb-3">
    <div class="card-body">
        <h5 class="card-title">@Product.Name</h5>
        <p class="card-text">@Product.Description</p>
        <SuperButton 
            Type="ButtonType.Button" 
            Label="@Product.Price.ToCurrency("sv-SE")"
            Color="Color.Dark" 
            Loading="_loading" 
            OnClick="AddToCart" />
    </div>
</div>