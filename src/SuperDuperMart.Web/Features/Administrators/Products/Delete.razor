@page "/manage/products/delete/{id:int}"
@attribute [Authorize(Roles = Roles.Administrator)]

<PageTitle>SuperDuperMart - Delete @Model?.Name</PageTitle>

@if (_loading)
{
    <Spinner />
}
else
{
    @if (Model != null)
    {
        <div class="row">
            <div class="col-sm-6 col-lg-5 col-xl-4">
                <div class="card shadow">
                    <div class="card-body">
                        <ul>
                            <li>@Model.Name</li>
                            <li>@Model.Price.ToString("C")</li>
                            <li>@Model.Material</li>
                        </ul>
                        <p>Are you sure you want to delete this product?</p>
                        <Button Type="ButtonType.Button" Label="Delete" Color="Color.Danger" OnClick="DeleteProduct" />
                        <Button Type="ButtonType.Button" Label="Cancel" Color="Color.Secondary" OnClick="Cancel" />
                    </div>
                </div>
            </div>
        </div>
    }
}