@page "/manage/products"
@attribute [Authorize(Roles = Roles.Administrator)]

<PageTitle>SuperDuperMart - Products</PageTitle>

<Spinner Enable="Loading" />
@if (Model != null && Model.Count() > 0)
{
    <div class="row mb-3">
        <div class="col-sm-8 col-xl-4">
            <div class="d-flex">
                <a href="@("/manage/products/create")" class="btn btn-success"><i class="bi bi-plus-circle"></i></a>
            </div>
        </div>
    </div>
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Price</th>
                <th>Material</th>
                <th>Created</th>
                <th>Modified</th>
                <th>Manage</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>
                        <a href="@($"/manage/products/{product.Id}")">@product.Name</a>
                    </td>
                    <td>@product.Price.ToCurrency("sv-SE")</td>
                    <td>@product.Material</td>
                    <td>@product.Created.ToSpecifiedDateFormat()</td>
                    <td>
                        @if (product.LastModified.HasValue)
                        {
                            <span>@product.LastModified.Value.ToSpecifiedDateFormat()</span>
                        }
                        else
                        {
                            <span>@DateTime.MinValue.ToSpecifiedDateFormat()</span>
                        }
                    </td>
                    <td>
                        <a href="@($"/manage/products/{product.Id}")" class="btn btn-primary"><i class="bi bi-pencil-square"></i></a>
                        <a href="@($"/manage/products/delete/{product.Id}")" class="btn btn-danger"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}