@page "/manage/products/edit/{id:int}"

<PageTitle>SuperDuperMart - @Model?.Name</PageTitle>

@if (Loading)
{
    <p>Loading...</p>
}
else
{
    @if (Model != null)
    {
        <h3>@Model.Name</h3>
        <p>@Model.Description</p>
        <ul>
            <li>@Model.Price.ToString("C")</li>
            <li>@Model.Material</li>
        </ul>
    }
}