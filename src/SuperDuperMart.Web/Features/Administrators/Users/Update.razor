@page "/manage/users/{id:int}"
@attribute [Authorize(Roles = Constants.Roles.Administrator)]

<PageTitle>SuperDuperMart - Update @($"{Model?.FirstName} {Model?.LastName}")</PageTitle>

@if (_loading)
{
    <Spinner />
}
else
{
    @if (Model != null)
    {
        <div class="row">
            <div class="col-sm-8 col-lg-6">
                <div class="card shadow">
                    <h5 class="card-header">Profile</h5>
                    <div class="card-body">
                        <EditForm Model="@Model" OnValidSubmit="Submit">
                            <DataAnnotationsValidator />
                            <div class="mb-3">
                                <label class="form-label" for="@Model.Avatar">Avatar</label>
                                <InputText type="text" class="form-control" for="Model.Avatar" @bind-Value="Model.Avatar" />
                                <ValidationMessage For="() => Model.Avatar" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="@Model.FirstName">First name</label>
                                <InputText type="text" class="form-control" for="Model.FirstName" @bind-Value="Model.FirstName" />
                                <ValidationMessage For="() => Model.FirstName" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="@Model.LastName">Last name</label>
                                <InputText type="text" class="form-control" for="Model.LastName" @bind-Value="Model.LastName" />
                                <ValidationMessage For="() => Model.LastName" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="@Model.Location.StreetName">Street name</label>
                                <InputText type="text" class="form-control" for="Model.Location.StreetName" @bind-Value="Model.Location.StreetName" />
                                <ValidationMessage For="() => Model.Location.StreetName" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="@Model.Location.ZipCode">Zip code</label>
                                <InputText type="text" class="form-control" for="Model.Location.ZipCode" @bind-Value="Model.Location.ZipCode" />
                                <ValidationMessage For="() => Model.Location.ZipCode" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="@Model.Location.City">City</label>
                                <InputText type="text" class="form-control" for="Model.Location.City" @bind-Value="Model.Location.City" />
                                <ValidationMessage For="() => Model.Location.City" />
                            </div>
                            <Button Type="ButtonType.Submit" Label="Save" Color="Color.Dark" />
                            <Button Type="ButtonType.Button" Label="Cancel" Color="Color.Secondary" OnClick="Cancel" />
                        </EditForm>
                    </div>
                </div>
            </div>
            <div class="col-sm-8 col-lg-6">
                <div class="card shadow">
                    <h5 class="card-header">Account</h5>
                    <div class="card-body">
                        <EditForm Model="@Model" OnValidSubmit="Submit">
                            <DataAnnotationsValidator />
                            <div class="mb-3">
                                <label class="form-label" for="@Model.Username">Username</label>
                                <InputText type="text" class="form-control" for="Model.Username" @bind-Value="Model.Username" />
                                <ValidationMessage For="() => Model.Username" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="@Model.Email">Email</label>
                                <InputText type="text" class="form-control" for="Model.Email" @bind-Value="Model.Email" />
                                <ValidationMessage For="() => Model.Email" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="@Model.RoleId">Role</label>
                                <InputSelect class="form-control" for="Model.RoleId" @bind-Value="Model.RoleId">
                                    @foreach (var role in Roles)
                                    {
                                        <option value="@role.Id">@role.Name</option>
                                    }
                                </InputSelect>
                                <ValidationMessage For="() => Model.RoleId" />
                            </div>
                            <Button Type="ButtonType.Submit" Label="Save" Color="Color.Dark" />
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    }
}