@page "/products"

<PageTitle>SuperDuperMart - Products</PageTitle>

@if (Loading)
{
    <p>Loading...</p>
}
else
{
    @if (Model != null && Model.Count() > 0)
    {
        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Material</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>@product.Name</td>
                        <td>@product.Price</td>
                        <td>@product.Material</td>
                        <td>
                            <a class="btn btn-primary"><i class="bi bi-pencil-square"></i></a>
                        </td>
                        <td>
                            <a class="btn btn-danger"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No products to be found.</p>
    }
}